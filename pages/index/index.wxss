.scrollarea {
    height: 100vh;
  }
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .login-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .login-button {
    padding: 10px 20px;
    background-color: #007AFF;
    color: white;
    border: none;
    border-radius: 5px;
  }
  .code-display {
    margin-top: 20px;
  }
  .code-label {
    font-weight: bold;
  }
  .error-message {
    margin-top: 20px;
    color: red;
  }
  .copy-button {
    margin-top: 10px;
    padding: 5px 10px;
    background-color: #00BFFF;
    color: white;
    border: none;
    border-radius: 5px;
}